{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "public/index.php",
            "use": "vercel-php@0.3.6"
        },
        {
            "src": "public/storage/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/dist/(.*)",
            "headers": {
                "cache-control": "public,max-age=31536000,immutable"
            },
            "dest": "/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.php"
        }
    ]
}
